package org.appcelerator.titanium;

import java.io.IOException;
import java.io.InputStreamReader;
import java.io.Reader;

import org.mozilla.javascript.Context;
import org.mozilla.javascript.Scriptable;

import android.app.Application;

public class TiApplication extends Application
{
	protected TiContext tictx;

	public TiApplication() {

	}

	@Override
	public void onCreate()
	{
		super.onCreate();

        Context cx = Context.enter();
        try
        {
            // FOR NOW (UNTIL WE CAN COMPILE IN PACKAGING) WE HAVE TO TURN OFF OPTIMIZATIONS
            cx.setOptimizationLevel(-1);
            Scriptable scope = cx.initStandardObjects();

            tictx = new TiContext(cx, scope);

            // bootstrap
            Reader r;

            try {

            	r = new Reader(new InputStreamReader(getClass().getResourceAsStream("tiboot.js")));
            } catch (IOException e) {

            } finally {
            	if (r != null) {
            		try {
            			r.close();
            			r = null;
            		} catch (IOException ig) {
            			// Ignore
            		}
            	}
            }

            cx.e
         }
        catch(Exception ex)
        {
            ex.printStackTrace();
            Context.exit();
        }
	}

	@Override
	public void onLowMemory()
	{
		super.onLowMemory();
	}

	@Override
	public void onTerminate() {
		super.onTerminate();

		if (tictx != null) {
			tictx.cleanup();
		}
	}
}
