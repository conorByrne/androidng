<html>
<head>
	<title>Views API</title>
	
	<script>
	Titanium.UI.addEventListener('tabchange',function(e)
	{
		Titanium.API.info('tabchange index ' + e.index  + ' name ' + e.name + ' prevIndex ' + e.prevIndex + ' prevName ' + e.prevName);
	});
	
	// data for tableview
	var data = [
		{title:'Scroll Views', hasChild:true},
		{title:'View Animations', hasChild:true},
		{title:'Image Views', hasChild:true},
		{title:'Composite View 1', hasChild:true},
		{title:'Composite View 2 (iPhone)', hasChild:true},
		{title:'Custom Events', hasChild:true},
		{title:'Custom Table View', hasChild:true},
		{title:'Maps View (iPhone)', hasChild:true},
		{title:'CoverFlow View (iPhone)', hasChild:true},
		{title:'YQL + CoverFlow View (iPhone)', hasChild:true},
		{title:'Custom Grouped View (iPhone)', hasChild:true},
		
		
	];
	
	// tableview object
	var tableView = Titanium.UI.createTableView({
		data:data,
		title:'Views',
	}, function(eventObject) 
	{
		// handle tableview click events
		var idx = eventObject.index;
		switch(idx)
		{
			case 0:
			{
				Titanium.Analytics.featureEvent('views.scroll');
				var win = Titanium.UI.createWindow({
					url:'scroll_views.html',
					title:'Scroll Views',
					backgroundColor:'#336699'
				});
				win.open({animated:true});
				break;
			}
			case 1:
			{
				Titanium.Analytics.featureEvent('views.animation');
				var win = Titanium.UI.createWindow({url:'views.html',title:'View Animations'});
				win.open({animated:true});
				break;
			}
			case 2:
			{
				Titanium.Analytics.featureEvent('views.image');
				var win = Titanium.UI.createWindow({
					url:'image_views.html',
					title:'Image Views',
					backgroundColor:'#000000'
				});
				win.setBarColor('#000000');
				
				win.open({animated:true});
				break;
			}
			case 3:
			{
				Titanium.Analytics.featureEvent('views.composite.1');
				var win = Titanium.UI.createWindow({url:'composite_views.html',title:'Composite Views'});
				win.open({animated:true});
				break;
			}
			case 4:
			{
				Titanium.Analytics.featureEvent('views.composite.2');
				var win = Titanium.UI.createWindow({url:'composite_views2.html',title:'Composite Views'});
				win.open({animated:true});
				break;
			}

			case 5:
			{
				Titanium.Analytics.featureEvent('views.custom_events');
				var win = Titanium.UI.createWindow({url:'custom_events.html',title:'Custom Events'});
				win.open({animated:true});
				break;
			}

			case 6:
			{
				Titanium.Analytics.featureEvent('views.html_table');
				var win = Titanium.UI.createWindow({
					url:'custom_table_view.html',
					title:'Foobook',
					barColor:'#385292'
				});
				win.open({animated:true});
				break;
			}
			
			case 7:
			{
				Titanium.Analytics.featureEvent('views.maps');
				var win = Titanium.UI.createWindow({url:'maps.html',title:'Maps View'});
				win.open({animated:true});
				break;
			}
			case 8:
			{
				Titanium.Analytics.featureEvent('views.coverflow');
				var win = Titanium.UI.createWindow({url:'coverflow.html',title:'Cover Flow',barColor:'#000'});
				win.open({animated:true});
				break;
			}
			case 9:
			{
				Titanium.Analytics.featureEvent('views.coverflow_yql');
				var win = Titanium.UI.createWindow({url:'yql_coverflow.html',title:'YQL Cover Flow',barColor:'#000', backgroundImage:'images/flickr.png', orientation:'either'});
				win.open({animated:true});
				break;
			}
			case 10:
			{
				Titanium.Analytics.featureEvent('views.custom_grouped_view');
				var win = Titanium.UI.createWindow({url:'custom_grouped_view.html',title:'Custom Grouped View',barColor:'#340f00', backgroundImage:'images/chip.jpg'});
				win.open({animated:true});
				break;
			}

		}
	});
	Titanium.UI.currentWindow.addView(tableView);
	Titanium.UI.currentWindow.showView(tableView);
	
	</script>
</head>
<body>
	
</body>
</html>
